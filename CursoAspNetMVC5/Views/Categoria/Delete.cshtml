@model CursoAspNetMVC5.Models.Categoria

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Apagar Categoria</title>
</head>
<body>
    <h3>Você tem a Certeza que deseja apagar a Categoria?</h3>
    <div>
        <h4>Categoria</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Nome)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Nome)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Descricao)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Descricao)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.CategoriaId)
            <div class="form-actions no-color">
                <input type="submit" value="Apagar" class="btn btn-default" /> |
                @Html.ActionLink("Retornar a Lista", "Index")
            </div>
        }
    </div>
</body>
</html>
